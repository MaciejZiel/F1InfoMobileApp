<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quizLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:orientation="vertical"
    android:padding="32dp"
    android:gravity="center">

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tutaj będzie pytanie"
        android:textSize="24sp"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="48dp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnAnswer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Odpowiedź 1"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:textSize="18sp"
        android:elevation="6dp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnAnswer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Odpowiedź 2"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:textSize="18sp"
        android:elevation="6dp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnAnswer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Odpowiedź 3"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:textSize="18sp"
        android:elevation="6dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvQuizResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Twój wynik: 0/0"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginTop="32dp"
        android:visibility="gone"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnRetryQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spróbuj ponownie"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        tools:ignore="HardcodedText" />
</LinearLayout>
